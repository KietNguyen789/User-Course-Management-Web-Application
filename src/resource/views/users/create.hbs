<div class="mt-4">
    <h3>
        Create User
    </h3>
    <form method="POST" action="/users/store">
        <div class="form-group">
            <label for="name">Họ Tên: </label>
            <input type="text" class="form-control" id="name" name="name">
           
        </div>
        <div class="form-group">
            <label for="account">Tên Đăng Nhập: </label>
            <input type="text" class="form-control" id="account" name="account">
        </div>
      <div class="form-group">
            <label for="password">Mật Khẩu</label>
            <input type="text" class="form-control" id="password" name="password">
           
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" id="email" name="email">
        </div>
        <div class="form-group">
            <label for="phone">Số Điện Thoại</label>
            <input type="text" class="form-control" id="phone" name="phone">
        </div>
       <div class="form-group" style="display:flex; ">
            <label for="roll1" style=" margin: 10px 0;">Admin
            <input type="radio" class="form-control" id="roll1" name="roll" value="Admin" >
            </label> 
           
         
            <label for="roll2" style=" margin: 10px;">Brand
            <input type="radio" class="form-control" id="roll2" name="roll"value="Brand">
           </label>
         
          
            <label for="roll3"style=" margin: 10px;" >Gamer
            <input type="radio" class="form-control" id="roll3" name="roll" value="Gamer">
           </label>
       </div>
     <div class="form-group" >
            <label for="isLocked" style=" margin: 10px;">Active
            <input type="checkbox" class="form-control" id="isLocked" name="isLocked" value="false">
            </label> 
       </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
